{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      // Este alias diz que @/ aponta para a raiz do seu projeto (onde est√° o package.json)
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.js", "**/*.jsx", "next-env.d.ts"],
  "exclude": ["node_modules"]
}